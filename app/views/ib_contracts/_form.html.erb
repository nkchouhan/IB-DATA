<div class="row">
	<div class='col-md-3 align_center'>
		<h4>Contract Form</h4>
		<%= form_for @contract do |f| %>
		  <div class="form-group">
			  <label class= "control-label" > Con Id</label>
			  <%= f.text_field :con_id, class: 'form-control'%>
		  </div>
		  <div class="form-group">	  
			<%= f.label :sec_type, class: "control-label" %>
			<%= f.text_field :sec_type, class: 'form-control' %>
		  </div>
		  <div class="form-group">
		    <%= f.label :strike, class: "control-label" %>
		    <%= f.text_field :strike, class: 'form-control' %>
		  </div>
		  <div class="form-group">  
		    <%= f.label :currency, class: "control-label" %>
		    <%= f.text_field :currency, class: 'form-control' %>
		  </div>
		  <div class="form-group">  
		    <%= f.label :legs_description, class: "control-label" %>
		    <%= f.text_field :legs_description, class: 'form-control' %>
		  </div>
		  <div class="form-group">  
		    <%= f.label :symbol, class: "control-label" %>
		    <%= f.text_field :symbol, class: 'form-control' %>
		  </div>
		  <div class="form-group">  
		    <%= f.label :symbol, class: "control-label" %>
		    <%= f.text_field :symbol, class: 'form-control' %>
		  </div>
		  <div class="form-group">  
		    <%= f.label :local_symbol, class: "control-label" %>
		    <%= f.text_field :local_symbol, class: 'form-control' %>
		  </div>
		  <div class="form-group">  
		    <%= f.label :multiplier, class: "control-label" %>
		    <%= f.text_field :multiplier, class: 'form-control' %>
		  </div>
		  <div class="form-group">  
		    <%= f.label :expiry, class: "control-label" %>
		    <%= f.text_field :expiry, class: 'form-control' %>
		  </div>
		  <div class="form-group">  
		    <%= f.label :exchange, class: "control-label" %>
		    <%= f.text_field :exchange, class: 'form-control' %>
		  </div>
		  <div class="form-group">  
		    <%= f.label :primary_exchange, class: "control-label" %>
		    <%= f.text_field :primary_exchange, class: 'form-control' %>
		  </div>
		  <div class="form-group">  
		    <%= f.label :include_expired, class: "control-label" %>
		    <%= f.text_field :include_expired, class: 'form-control' %>
		  </div>
		  <div class="form-group">  
		    <%= f.label :right, class: "control-label" %>
		    <%= f.text_field :right, class: 'form-control' %>
		  </div>
		  <div class="form-group">  
		    <%= f.label :type, class: "control-label" %>
		    <%= f.text_field :type, class: 'form-control' %>
		  </div> 
		  <div class="form-group">  
		  	<% if params[:action] == 'edit' %>
		      <%= f.submit 'Update Contract', class:'btn btn-primary' %>
		    <% else %>
		      <%= f.submit 'Create Contract', class:'btn btn-primary' %>
		    <% end %>  
		  </div>  
		<% end %>
	</div>	
</div>	